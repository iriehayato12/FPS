<div class="container ml-0">
    <div class="row mt-4 justify-content-center">
        <div class="col-md-6">
            <h4 class="text-weight-bold">新規投稿</h4>
            <%= form_with model: @post do |f| %>
            
            <div class="form-group">
             <%= f.label :タイトル %><br/>
             <%= f.text_field :title %>
            </div>
            
            <div class="form-group">
             <%= f.label :内容 %><br/>
             <%= f.text_area :body, class: "w-50" %>
            </div>
            
            <div class="form-group">
             <%= f.label :カテゴリー %><br/>
             <%= f.collection_select :category_id, Category.all, :id, :name, { include_blank: "--選択して下さい--"}, {class: "form-control"} %>
            </div>
            
            <div class="form-group">
             <%= f.submit "投稿", class:"btn btn-success" %>
            </div>
            
            <% end %>
            
            
            
        </div>
    </div>
</div>