<div class = "container mt-4">
    <h2 class="mt-4"> <span class="w-25" style="background-color: #eee">投稿詳細</span></h2>
    
    <div class="row mt-4 w-100">
        <%= image_tag @post.user.get_profile_image(50,50) %>
        <%= link_to user_path(@post.user_id), class:"text-warning pt-2 pl-1" do %>
         <%= @post.user.name %>
        <% end %>
    </div>
    
    <div class="row mt-3">
     <div class="col-md-8">
        <h3><span style="background-color: #eee">タイトル</span> <%= "" %> <%= @post.title %></h3>
     </div>
    </div>
    
    <div class="row mt-3">
     <div class="col-md-8">
        <h3><span style ="background-color: #eee">内容</span></h3>　<h4><span class="border"><%= @post.body %></span></h4>
     </div>
    </div>
    
    <div class="row mt-3 text-center">
     <% if @post.user_id == current_user.id %>
      <%= link_to "削除する", post_path, method: :delete, class:"btn btn-danger ml-4", data: {confirm: "投稿を削除しますか？"} %>
     <% end %>
    </div>
    <p class="mt-3">投稿日：<%= @post.created_at.strftime('%Y/%m/%d') %></p>
</div>