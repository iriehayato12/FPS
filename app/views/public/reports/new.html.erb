<div class="container mt-3">
    <h3 class="text-center"><span class="bg-dark text-light">通報</span></h3>
    
    <%= form_with model:[@user, @report] do |f| %>
  　<div class="form-group">
  　 <h5 class="mb-0"><span class="text-weight-bold text-danger border border-dark bg-warning">理由</span></h5>
   　<%= f.text_area :reason, rows:'3', class:"form-control mt-0" %>
   　<h5><span class="text-danger border border-dark bg-warning">URL等</span></h5>
   　 <%= f.text_field :url, class:"form-control" %>
   　 <%= f.submit "通報する", class: "btn btn-danger mt-3 ml-0" %>
  　</div>
　　<% end %>
</div>