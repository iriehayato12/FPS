<div class="container mt-3 text-center">
    <div class="col-md-6 ml-2 bg-dark">

<h2><span class="text-white">通知</span></h2>
  <% if @notifications.present? %>
    <%= link_to "全削除",notification_path(@notifications), method: :delete, class:"btn btn-light" %>
    <% @notifications.each do |notification| %>
        <div class="text-light"><%= render "#{notification.action_type}", notification: notification %> </div>
    <% end %>
  <% else %>
    <div class="text-danger bg-dark">通知はありません</div>
  <% end %>
    </div>
</div>