<div class="container">
    <h3 class="mt-3"><span class="bg-dark text-light">マイページ編集</span></h3>
    
    
    <%= form_with model:@user, url: user_path, method: :patch, local:true do |f| %>
  <div class="row mt-5">
   <div class="col">
    <table class="table table-borderless">
        
       <tr>
        <td class="w-25"> <%= f.label :プロフィール画像 %> </td>
        <td>  <%= f.file_field :profile_image, placeholder: "プロフィール画像",accept: "image/*" %></td>
       </tr>
       
       <tr>
        <td> <%= f.label :名前 %> </td>
        <td> <%= f.text_field :name %></td>
       </tr>
       
       <tr>
        <td>自己紹介</td>
        <td><%= f.text_area :introduction %></td>
       </tr>
       
    </table>
   </div>
  </div>
          <div class="row justify-content-center">
           <div class="col-md-3"><%= f.submit "編集内容を保存", class:"btn btn-success  mr-5" %></div>
           <div class="col-md-3"><%= link_to "退会する", "/", class:"btn btn-danger ml-5" %></div>
          </div>
    <% end %>
</div>