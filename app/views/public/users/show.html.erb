
<div class="container mt-3"> 
 <% if user_signed_in? %>
       <div class="row mt-4 ml-5">
            <div class="col-md-3 offset-md-1">
        <% if @user == current_user %> 
        　　<h3 class="text-center"><span class="bg-dark text-light">マイページ</span></h3>
        <% else %>
            <h4><span class="bg-dark text-light text-nowrap"><%= @user.name %>さんのユーザー情報</span></h4>
        <% end %>
            </div>
        </div>
       <div class="row mt-3">
         <div class="col-md-7">
            <table class="table table-border table-dark">
                <tr>
                    <td class="text-center pt-4">プロフィール画像</td>
                    <td><%= image_tag @user.get_profile_image(50,50) %></td>
                </tr>
                <tr>
                    <td class="text-center">名前</td>
                    <td><%= @user.name %></td>
                </tr>
                <tr>
                    <td class="text-center">自己紹介</td>
                    <td><%= @user.introduction %></td>
                </tr>
            </table>
            <% if @user == current_user %>
             <%= link_to "編集",edit_user_path(@user),class: "btn btn-primary"  %>
            <% end %>
             <div class="text-right"><%= link_to ">>いいね投稿一覧", favorites_user_path(@user) %></div>
         </div>
       </div>
 <% else %>
        <div class="row mt-4 ml-5">
            <div class="col-md-3 offset-md-3">
        <% if @user == current_user %> 
        　　<h3 class="text-center"><span class="bg-dark text-light">マイページ</span></h3>
        <% else %>
            <h4><span class="bg-dark text-light text-nowrap"><%= @user.name %>さんのユーザー情報</span></h4>
        <% end %>
            </div>
        </div>
    <div class="row mt-3 d-flex justify-content-center">
        <div class="col-md-7">
            <table class="table table-border table-dark">
                <tr>
                    <td class="text-center pt-4">プロフィール画像</td>
                    <td><%= image_tag @user.get_profile_image(50,50) %></td>
                </tr>
                <tr>
                    <td class="text-center">名前</td>
                    <td><%= @user.name %></td>
                </tr>
                <tr>
                    <td class="text-center">自己紹介</td>
                    <td><%= @user.introduction %></td>
                </tr>
            </table>
            <% if @user == current_user %>
             <%= link_to "編集",edit_user_path(@user),class: "btn btn-primary"  %>
            <% end %>
             <div class="text-right"><%= link_to ">>いいね投稿一覧", favorites_user_path(@user) %></div>
        </div>
    </div>
 <% end %>
</div>
