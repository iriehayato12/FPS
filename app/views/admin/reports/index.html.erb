<div class="container mt-5">
   <div classs="row justify-content-center">
    <div class="col-md-10">
        <h2><span class="bg-dark text-light" >通報一覧</span></h2>
        <table class="table table-hover table-inverse", style="table-layout:fixed;width:100%;">
         <thead>
          <tr>
           <th style="width:33%;">通報ID</th>
           <th style="width:33%;">名前</th>
           <th style="width:33%;">通報者</th>
           <th style="width:33%;">ステータス</th>
           <th colspan="3"></th>
          </tr>
         </thead>
         
         <tbody>
          <% @reports.each do |report| %>
          <tr>
          <td style="width:33%;">
              <%= link_to report.id, admin_report_path(report) %>
          </td>
          <td style="width:33%;"><%= report.reported.name %></td>
          <td style="width:33%;"><%= report.reporter.name %></td>
          <td style ="width:33%"><%= report.status_i18n %></td>
          </tr>
          <% end %>
          <%= paginate @reports %>
         </tbody>
        </table>
    </div>
   </div>
 </div>