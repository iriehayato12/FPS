<% post.post_comments.each do |post_comment| %>
     <div class="row mt-3">
       <%= link_to user_path(post_comment.user) do %>
        <p class="mb-0"><%= image_tag post_comment.user.get_profile_image(50,50) %></p>
        <%= post_comment.user.name %>
       <% end %>
       <div class="ml-3 mt-2"><%= post_comment.comment %></div>
          <div class="col-md-2"><%= link_to "削除", admin_post_post_comment_path(@post, post_comment), method: :delete, class:"btn btn-danger" %> </div>
       </div>
     <div class="ml-0"><small><%= post_comment.created_at.strftime('%Y/%m/%d/%H:%M').to_s %></small></div>
<% end %>