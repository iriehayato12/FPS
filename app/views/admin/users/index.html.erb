<div class="container mt-5">
   <div classs="row justify-content-center">
    <div class="col-md-10">
        <h2><span class="bg-dark text-light" >ユーザ一覧</span></h2>
        <table class="table table-hover table-inverse", style="table-layout:fixed;width:100%;">
         <thead>
          <tr>
           <th style="width:33%;">プロフィール画像</th>
           <th style="width:33%;">名前</th>
           <th style="width:33%;">いいね件数</th>
           <th colspan="3"></th>
          </tr>
         </thead>
         
         <tbody>
          <% @users.each do |user| %>
          <tr>
          <td style="width:33%;">
              <%= link_to admin_user_path(user.id), class:"text-warning" do %>
              <%= image_tag user.get_profile_image(100,100) %><br>
              <%= user.name %>
              <% end %>
          </td>
          <td style="width:33%;"><%= user.name %></td>
          <td style="width:33%;"><%= user.favorites.count %>件</td>
          </tr>
          <% end %>
          <%= paginate @users %>
         </tbody>
        </table>
    </div>
   </div>
 </div>